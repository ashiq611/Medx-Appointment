{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "commonjs",                            
    "esModuleInterop": true,                         
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "resolveJsonModule": true,                      
    "strict": true,                                 
    "noImplicitAny": true,                         
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
